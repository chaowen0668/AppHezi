<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Material Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/icons</item>
    </style>

    <style name="Prefs" parent="AppTheme">
        <item name="android:textColorPrimary">@color/secondary_text</item>
    </style>

    <style name="CollapsingToolbarTitleStyle" parent="Widget.Design.CollapsingToolbar">
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="TextXLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/text_black_light</item>
    </style>

    <style name="TextLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/text_black_light</item>
    </style>

    <style name="TextMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_black_light</item>
    </style>

    <style name="TextSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/text_gray_light</item>
    </style>

</resources>
